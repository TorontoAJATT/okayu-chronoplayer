<!DOCTYPE html>
<html>
<head>
  <title>Nekotama Okayu Chrono Livestreams</title>
</head>
<body>
  <div id="player"></div>

  <script src="https://www.youtube.com/iframe_api"></script>
  <script>
    // Example list of Okayu livestream video IDs in chronological order
    const videos = [
      'VIDEO_ID_1', // Replace with real IDs
      'VIDEO_ID_2',
      'VIDEO_ID_3'
    ];
    
    let current = 0;
    let player;

    function onYouTubeIframeAPIReady() {
      player = new YT.Player('player', {
        height: '720',
        width: '1280',
        videoId: videos[current],
        events: {
          'onStateChange': onPlayerStateChange
        }
      });
    }

    function onPlayerStateChange(event) {
      if (event.data === 0) { // video ended
        current++;
        if (current < videos.length) {
          player.loadVideoById(videos[current]);
        }
      }
    }
  </script>
</body>
</html>
